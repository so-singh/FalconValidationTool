                                        </div>
                                    </div>
                                    <div class="div-table-row" style="width:100%">
                                        <div class="div-table-col" align="left" style="width:30%">
                                            @Html.EditorFor(model => model.TransactionHistoryList[0].TransactionDate, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <div class="div-table-col" align="left" style="width:30%">
                                            @Html.EditorFor(model => model.TransactionHistoryList[0].Amount, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <div class="div-table-col" align="left" style="width:30%">
