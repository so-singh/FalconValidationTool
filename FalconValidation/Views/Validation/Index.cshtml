                                    new SelectList(new string[] { "TRUE", "FALSE"}))
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="div-table-row" style="width:100%">
                            <div class="div-table-col" align="left" style="width:100%">
                                <div class="div-table" style="width:100%;height:100%;">
                                    <h3>Transaction History</h3>
                                    <div class="div-table-row" style="width:100%">
