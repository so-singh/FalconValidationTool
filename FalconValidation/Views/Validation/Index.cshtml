                                            @Html.EditorFor(model => model.TransactionHistoryList[4].TransactionDate, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <div class="div-table-col" align="left" style="width:30%">
                                            @Html.EditorFor(model => model.TransactionHistoryList[4].Amount, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <div class="div-table-col" align="left" style="width:30%">
