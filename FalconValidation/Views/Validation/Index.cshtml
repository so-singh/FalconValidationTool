    {
        <div class="div-table" style="width:100%;height:750px;">
            <div class="div-table-row" style="width:100%">
                <div class="div-table-col" align="left" style="width:50%">
                    <h3>Customer Details</h3>
                    @Html.HiddenFor(model => model.ValidationID, new { htmlAttributes = new { @class = "form-control" } })
