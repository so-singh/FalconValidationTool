                        </div>
                        <div class="div-table-row" style="width:100%">
                            <div class="div-table-col" align="right" style="width:100%">
                                <input type="submit" id="btnSubmit" value="Submit" formaction="@Url.Action("Save")" formmethod="post" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="div-table-col" align="right" style="width:50%;height:100%">
                    
                    <object data="@Url.Action("GetPDF", "Validation", new { pdfFileName= Model.PDFFileName })" type="application/pdf" width="100%" height="100%">
                    
                    </object>
                    
           
                </div>
            </div>
        </div>
    }
}

 else
            {
<span style="color:red;font-size: 24px;">ERROR :File @Model.PDFFileName doesn't exist</span>
<br />
